{
  "name": "remark-link-rewrite",
  "version": "1.0.0",
  "description": "Updates link URLs using a replacer function.",
  "main": "dist/remark-link-rewrite.cjs.js",
  "module": "dist/remark-link-rewrite.esm.js",
  "browser": "dist/remark-link-rewrite.umd.js",
  "exports": {
    "import": "./dist/remark-link-rewrite.esm.js",
    "require": "./dist/remark-link-rewrite.cjs.js"
  },
  "scripts": {
    "build": "rollup -c",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "prepare": "npm run build"
  },
  "type": "module",
  "author": "Radovan Janjic <hi@rjanjic.com>",
  "license": "MIT",
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "testRegex": "/__tests__/.*\\.[jt]sx?$",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.0.3",
    "remark": "^14.0.2"
  },
  "dependencies": {
    "@babel/core": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "babel-jest": "^29.0.3",
    "unist-util-visit": "^4.1.1"
  },
  "engines": {
    "node": ">=10.0"
  },
  "files": [
    "dist"
  ]
}
